@model DoctorLogin
@{
    ViewData["Title"] = "Login/Register";
}

<form method="post" asp-controller="Login" asp-action="Sign" asp-route-returnurl="@Model.ReturnUrl">
    <p class="tip"></p>
    <div class="cont">
        <div class="form sign-in">
            <h2>Welcome back,</h2>
            <label asp-for="Username">
                <span>Login</span>
                <input asp-for="Username" />
            </label>
            <label asp-for="Pass">
                <span>Password</span>
                <input asp-for="Pass" />
            </label>
            <p class="forgot-pass">Forgot password?</p>
            <p class="signup_container">
                <button type="submit" class="submit_login" name="lDoctor" value="LoginDoctor">Sign In As Doctor</button>
                <button type="submit" class="submit_login" name="lPatient" value="LoginPatient">Sign In As Patient</button>
            </p>
        </div>
        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">
                    <h2>New here?</h2>
                    <p>Sign up and discover great amount of new opportunities!</p>
                </div>
                <div class="img__text m--in">
                    <h2>One of us?</h2>
                    <p>If you already has an account, just sign in. We've missed you!</p>
                </div>
                <div class="img__btn">
                    <span class="m--up">Sign Up</span>
                    <span class="m--in">Sign In</span>
                </div>
            </div>
            <div class="form sign-up">
                <h2> Be aware of your health</h2>
                <label>
                    <span>Name</span>
                    <input type="text" />
                </label>
                <label>
                    <span>Email</span>
                    <input type="email" />
                </label>
                <label>
                    <span>Password</span>
                    <input type="password" />
                </label>
                <p class="signup_container">
                    <button type="submit" class="submit_register" name="rDoctor" value="RegisterDoctor">Sign Up As Doctor</button>
                    <button type="submit" class="submit_register" name="rPatient" value="RegisterPatient">Sign Up As Patient</button>
                </p>
            </div>
        </div>
    </div>
    <script src="~/js/index.js"></scr
 </form>